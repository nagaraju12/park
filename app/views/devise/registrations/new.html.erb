<h2>User Registration Form:-</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, :role => params[:role])) do |f| %>
<div class="field">
<%= f.hidden_field :role, :value => params[:role] %>
</div>


  <%= devise_error_messages! %>
 <br>
<h3>Account Information:</h3>
    <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>
    <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
<%= f.file_field :attachment %>
<h3>User Information:</h3>

 <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
    <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="field">
<%= f.label :gender_type_list %><br>
<%= f.select :gender_type_list, User::GENDER_TYPES, prompt: 'Select a gender method' %>
</div>
    <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
    <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true %>
  </div>
    <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true %>
  </div>
    <div class="field">
<%= f.label :country_list %><br>
<%= f.select :country_list, User::COUNTRY,
prompt: 'Select a country ' %>
 </div><br>
 <h3>Area of Interest:</h3>
    <div class="field">
      <%= f.check_box :end_to_end_data_requisition %>
      <%= f.label :end_to_end_data_requisition, "End to End data requisition" %>
    </div>
    <div class="field">
      <%= f.check_box :automated_test_benches_ate %>
      <%= f.label :automated_test_benches_ate, " Automated Test Benches (ATE)" %>
    </div>
    <div class="field">
      <%= f.check_box :engineering_services %>
      <%= f.label :engineering_services, " Engineering services" %>
    </div>
    <div class="field">
      <%= f.check_box :maintenance_support_services %>
      <%= f.label :maintenance_support_services, "Maintenance support services" %>
    </div><br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
